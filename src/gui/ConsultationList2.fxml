<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="469.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ConsultationListController">
   <children>
      <Label text="Consultation">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </Label>
    <Button fx:id="btNew" mnemonicParsing="false" onAction="#onBtNewAction" text="New Consultation" />
      <AnchorPane prefHeight="69.0" prefWidth="750.0">
         <children>
            <Label layoutX="14.0" layoutY="26.0" text="Search for protocol" />
            <TextField fx:id="txtProtocol" layoutX="124.0" layoutY="22.0" />
          <Button fx:id="btSearchProtocol" layoutX="283.0" layoutY="22.0" mnemonicParsing="false" onAction="#onBtSearchProtocolAction" text="Search" />
            <ComboBox fx:id="comboBoxPatient" layoutX="443.0" layoutY="22.0" prefWidth="150.0" />
            <Label layoutX="341.0" layoutY="26.0" text="Search for patient" />
            <Button fx:id="btSearchPatient" layoutX="602.0" layoutY="22.0" mnemonicParsing="false" onAction="#onBtSearchPatientAction" text="Search" />
         </children>
      </AnchorPane>
      <TableView fx:id="tableViewConsultation" prefHeight="233.0" prefWidth="750.0" stylesheets="@../css/style.css">
        <columns>
            <TableColumn fx:id="tableColumnProtocol" prefWidth="76.0" text="Protocol" />
            <TableColumn fx:id="tableColumnDate" prefWidth="81.0" text="Date" />
          <TableColumn fx:id="tableColumnNameClinic" prefWidth="92.0" text="Clinic Name" />
            <TableColumn fx:id="tableColumnDoctor" prefWidth="88.0" text="Doctor Name" />
            <TableColumn fx:id="tableColumnNamePatient" prefWidth="97.0" text="Patient Name" />
            <TableColumn fx:id="tableColumnLaudo" prefWidth="114.0" text="Laudo" />
            <TableColumn fx:id="tableColumnMedication" prefWidth="119.0" text="Medication" />
            <TableColumn fx:id="tableColumnEDIT" prefWidth="86.0" />
            <TableColumn fx:id="tableColumnREMOVE" prefWidth="71.0" />
        </columns>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
